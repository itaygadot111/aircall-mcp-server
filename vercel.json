{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "builds": [
    {
      "src": "api/mcp.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/mcp/(.*)",
      "dest": "/api/mcp.py"
    },
    {
      "src": "/mcp",
      "dest": "/api/mcp.py"
    }
  ],
  "env": {
    "AIRCALL_API_ID": "@aircall-api-id",
    "AIRCALL_API_TOKEN": "@aircall-api-token"
  }
}
